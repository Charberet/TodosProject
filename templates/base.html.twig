<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}TACHES!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
		{% block javascripts %}{% endblock %}
	</head>

	<body>
		{% block header %}

			<nav class="navbar navbar-dark bg-dark">
				<form class="container-fluid justify-content-start">
					<a href={{path ('task')}}>
						<button class="btn btn-light me-2" type="button">Liste des tâches</button>
					</a>
                    <a href={{path ('addtask')}}>
						<button class="btn btn-light me-2" type="button">Ajouter des tâches</button>
					</a>
                    <a href={{path ('register')}}>
						<button class="btn btn-success me-2" type="button">Inscription</button>
					</a>
                    <a href={{path ('app_login')}}>
						<button class="btn btn-warning me-2" type="button">Connexion</button>
					</a>
                    <a href={{path ('logout')}}>
						<button class="btn btn-warning me-2" type="button">Déconnexion</button>
					</a>
					
				</form>
			</nav>
			{% for message in app.flashes('success') %}
				<div class="flash-notice alert alert-primary d-flex justify-content-center">
					{{ message }}
				</div>
			{% endfor %}
			<div class="container">
			{% endblock %}
			{% block body %}{% endblock %}
		</div>
	</body>
</html>
