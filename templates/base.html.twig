<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}TACHES!
			{% endblock %}
		</title>

		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{% block stylesheets %}

			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		{% endblock %}
		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
		{% endblock %}

	</head>

	<body>
		{% block header %}

			<nav class="navbar navbar-dark bg-dark">

				<form class="container-fluid justify-content-start">
					{% if app.user %}
						<div class="d-flex justify-content-center">
							<div><img src="{{ asset('media/ProfilPicture/' ~ app.user.ProfilPicture)}}" style="width: 120px;"></div>
							<div class="col"> <p class="text-white">
								{{app.user.Name}}
								{{app.user.FirstName}}
							</p>

							<li class="nav-item dropdown ">
								<a class="nav-link dropdown-toggle btn btn-primary text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Mon compte
								</a>
								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item" href={{path ('addtask')}}>Add task</a>
									</li>
									<li>
										<a class="dropdown-item" href={{path ('task')}}>Task list</a>
									</li>
									<li><hr class="dropdown-divider"></li>
									<li>
										<a id="logout-btn" class="dropdown-item " href={{path ('logout')}}>Logout</a>
									</li>
								</ul>
							</li>
						</div>
						</div>
					{% else %}

						<a href={{path ('register')}}>
							<button class="btn btn-success me-2" type="button">Register</button>
						</a>
						<a href={{path ('app_login')}}>
							<button class="btn btn-warning me-2" type="button">Sign in</button>
						</a>

					{% endif %}
				</form>
			

			</nav>

			{% for message in app.flashes('success') %}
				<div class="flash-notice alert alert-primary d-flex justify-content-center">
					{{ message }}
				</div>
			{% endfor %}
			<div class="container">
			{% endblock %}

			{% block bienvenue %}{% endblock %}

			{% block body %}{% endblock %}
		</div>
	</body>
</html>
